[{
    "layer": "top",
    "position": "top",
 	"min-height": 0,
    "height": 25,
    "gaps": 0,
	"margin-left": 110,
	"margin-right": 110,
    "modules-left": [
        "custom/spotify"
    ],
    "modules-center": [
        "network",
		"temperature",
		"cpu",
		"memory"
    ],
    "modules-right": [
		"sway/window"
    ],
	"network": {
		"interface": "wlp3s0",
		"format": "{ifname}",
		"format-wifi": " {essid} ({signalStrength}%)",
		"format-ethernet": "{ifname} ",
		"format-disconnected": "",
		"tooltip-format": "{ifname}",
		"tooltip-format-wifi": "{essid} ({signalStrength}%) ",
		"tooltip-format-ethernet": "{ifname} ",
		"tooltip-format-disconnected": "Disconnected",
		"max-length": 50
	},
	"sway/window": {
		"format": "{}",
		"max-length": 50
	},
	"memory": {
		"interval": 1,
		"format": " {}%",
		"max-length": 10
	},
    "pulseaudio": {
        "scroll-step": 5,
        "format": "{icon} {volume}%",
        "format-alt": "{volume} {icon}",
        "format-alt-click": "click-right",
        "format-muted": " Muted",
        "format-icons": {
            "default": ["", "", "", "", "", ""]
        },
        "on-click": "pavucontrol",
        "tooltip": true
    },
    "sway/workspaces": {
		"format": "{icon}",
        "disable-scroll-wraparound": true,
        "enable-bar-scroll": false,
        "smooth-scrolling-threshold": 20,
        "all-outputs": true,
		"format-icons": {
			"1": "",
			"2": "",
			"3": "",
			"4": "",
			"5": "",
			"6": "",
			"7": "",
			"8": ""
		}
    },
    "custom/spotify": {
        "interval": 2,
		"max-length": 50,
        "format": " {}",
        "return-type": "json",
        "exec": "~/.config/waybar/modules/spotify.sh --title",
        "exec-if": "pgrep spotify",
        "escape": true
    },
    "clock": {
        "interval": 1,
        "format": "{:%a, %b %d	%H:%M:%S}",
        "tooltip": false
    },
    "custom/spotify_previous": {
        "format": "",
        "on-click": "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous",
        "exec-if": "pgrep spotify",
        "tooltip": false
    },
    "custom/spotify_next": {
        "format": "",
        "on-click": "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next",
        "exec-if": "pgrep spotify",
        "tooltip": false
    },
    "custom/spotify_playpause": {
        "format": "",
        "on-click": "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause",
        "exec-if": "pgrep spotify",
        "tooltip": false
    },    
    "temperature": {
        "hwmon-path": "/sys/devices/platform/thinkpad_hwmon/hwmon/hwmon3/temp1_input",
		"interval":1,
        "critical-threshold": 80,
        "format": "{icon} {temperatureC}°C",
        "format-critical": " {icon} {temperatureC}°C",
        "format-icons": [""]
    },
	"cpu": {
		"interval": 1,
		"format":  " {}%",
		"max-length": 10
	},
    "custom/temperature_cpu": {
        "interval": 10,
        "format": " CPU {}",
        "return-type": "json",
        "exec": "~/.config/waybar/modules/temperatures.sh --cpu"
    },
    "custom/temperature_gpu": {
        "interval": 10,
        "format": " GPU {}",
        "return-type": "json",
        "exec": "~/.config/waybar/modules/temperatures.sh --gpu"
    },
    "custom/temperature_gpu2": {
        "interval": 10,
        "format": " GPU2 {}",
        "return-type": "json",
        "exec": "~/.config/waybar/modules/temperatures.sh --gpu2"
    },
    "custom/temperature_ssd": {
        "interval": 10,
        "format": " SSD {}",
        "return-type": "json",
        "exec": "~/.config/waybar/modules/temperatures.sh --ssd"
    },
    "custom/temperature_nvme": {
        "interval": 10,
        "format": " NVMe {}",
        "return-type": "json",
        "exec": "~/.config/waybar/modules/temperatures.sh --nvme"
    },
    "backlight": {
        "format": "{icon}",
        "format-alt": "{percent}% {icon}",
        "format-alt-click": "click-right",
        "format-icons": ["", ""],
        "on-scroll-down": "light -A 1",
        "on-scroll-up": "light -U 1"
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-critical": "{icon} {capacity}%",
        "format-warning": "{icon} {capacity}%",
        "format-fd": "{icon}  {capacity}% ",
        "format-charging": " {capacity}% ",
        "format-plugged": " {capacity}% ",
        "format-icons": ["", "", "", "", ""]
    },
    "idle_inhibitor": {
        "format": "{icon} ",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        },
        "tooltip": false
    },
    "tray": {
        "spacing": 5,
        "icon-size": 18
    }
}]
