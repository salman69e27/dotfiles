[{
    "layer": "bottom",
    "position": "top",
 	"min-height": 0,
    "height": 30,
    "gaps": 0,
	"margin-left": 50,
	"margin-right": 50,
	"margin-top": 6,
    "modules-left": [
		"sway/workspaces",
		"sway/mode"
    ],
    "modules-center": [
		"clock"
    ],
    "modules-right": [
		"idle_inhibitor",
		"custom/separator",
		"memory",
		"custom/separator",
		"temperature",
		"custom/separator",
		"cpu",
		"custom/separator",
		"pulseaudio",
		"custom/separator",
		"battery"
    ],
    "custom/separator": {
		"format": " / "
    },
    "pulseaudio": {
		"format": "{icon}  {volume}%",
		"format-alt": "{volume} {icon}",
		"format-alt-click": "click-right",
		"format-muted": "  Muted",
		"format-icons": {
			"default": ["", "", ""]
		},
		"on-click": "pamixer -t",
		"on-scroll-up": "pamixer -i 5 -u --allow-boost",
		"on-scroll-down": "pamixer -d 5 -u --allow-boost",
		"tooltip": true
    },
	"memory": {
		"interval": 1,
		"format": "  {}%",
		"max-length": 10
	},
	"cpu": {
		"interval": 1,
		"format":  "  {usage}%",
		"max-length": 10
	},
    "sway/workspaces": {
		"format": "{icon}",
		"disable-scroll-wraparound": true,
		"enable-bar-scroll": false,
		"smooth-scrolling-threshold": 20,
		"all-outputs": true,
		"format-icons": {
			"1": "",
			"2": "",
			"3": "",
			"4": "",
			"5": "",
			"6": "",
			"7": "",
			"8": ""
		}
    },
	"sway/mode": {
		"format": "{}",
		"max-length": 80
	},
    "clock": {
		"interval": 1,
		"format": "{:%a, %b %d	%H:%M:%S}",
		"tooltip": false
    },
    "temperature": {
        "hwmon-path": "/sys/devices/platform/thinkpad_hwmon/hwmon/hwmon3/temp1_input",
		"interval":1,
        "critical-threshold": 80,
        "format": "{icon}  {temperatureC}°C",
        "format-critical": " {icon}  {temperatureC}°C",
        "format-icons": [""]
    },
    "backlight": {
		"format": "{icon}",
		"format-alt": "{percent}% {icon}",
		"format-alt-click": "click-right",
		"format-icons": ["", ""],
		"on-scroll-down": "light -A 1",
		"on-scroll-up": "light -U 1"
    },
    "battery": {
		"states": {
			"warning": 30,
			"critical": 15
		},
		"format": "{icon}  {capacity}%",
		"format-critical": "{icon} {capacity}%",
		"format-warning": "{icon} {capacity}%",
		"format-fd": "{icon} {capacity}% ",
		"format-charging": "  {capacity}% ",
		"format-plugged": "  {capacity}% ",
		"format-icons": ["", "", "", "", ""]
    },
    "idle_inhibitor": {
		"format": "{icon} ",
		"format-icons": {
			"activated": "",
			"deactivated": ""
		},
		"tooltip": false
    },
	"tray": {
		"spacing": 5,
		"icon-size": 18
	}
}]
